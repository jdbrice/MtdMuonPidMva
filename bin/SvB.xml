<?xml version="1.0" encoding="UTF-8" ?>
<root>
    <Data name="d" url="mva.root"/>

    <Method>Likelihood</Method>

    <LS>d/Method_{Method}/{Method}/MVA_{Method}_S_high</LS>
    <LB>d/Method_{Method}/{Method}/MVA_{Method}_B_high</LB>

    <EffS>d/Method_{Method}/{Method}/MVA_{Method}_effS</EffS>
    <EffB>d/Method_{Method}/{Method}/MVA_{Method}_effB</EffB>

    <TFile url="plots.root" />
    <Transform>
        <Add save_as="hsum" nameA="{LS}" nameB="{LB}" />
    </Transform>
    <Transform>
        <Divide save_as="Purity" nameA="{LS}" nameB="hsum"/>
    </Transform>

    <Margins>0.02, 0.01, 0.12, 0.1</Margins>

    <Plot>
        <TLatex text="Method: {Method}" x="0.15" y="0.91" size="0.05"/>
        <Histo name="{LS}">
            <style draw="h" lc="blue" lw="2" xr="0.4, 2.5" logy="1" yr="1e-2, 10" title=";Likelihood" optstat="0"/>
        </Histo>

        <Histo name="{LB}">
            <style draw="h same" lc="red" lw="2"/>
        </Histo>

        <Histo name="{EffS}">
            <style draw="h same" lc="blue" linestyle="2" lw="2"/>
        </Histo>

        <Histo name="{EffB}">
            <style draw="h same" lc="red" linestyle="2" lw="2"/>
        </Histo>

        <Histo name="Purity">
            <style draw="h same" lc="black" lw="2" />
        </Histo>

        <Legend>
            <Position pos="bottom hcenter" w="0.3"/>
            <Entry name="{LS}" title="Signal"/>
            <Entry name="{LB}" title="Background"/>
            <Entry name="{EffS}" title="Signal Efficiency"/>
            <Entry name="{EffB}" title="Background Efficiency"/>
            <Entry name="Purity" title="Signal Purity (60%, 80%, 100%)"/>
            
        </Legend>

        <TLine x="0.4, 1" y="1.0, 1.0" color="#000000"/>
        <TLine x="0.4, 1" y="0.8, 0.8" color="#000000"/>
        <TLine x="0.4, 1" y="0.6, 0.6" color="#000000"/>

        <Export url="plot_{Method}_SvsB.pdf"/>
    </Plot>

</root>